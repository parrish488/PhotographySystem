@model IEnumerable<PhotgraphyMVC.Models.Mileage>

@{
    ViewBag.Title = "Mileage";
}

<h2>Current Mileage</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientEvent.EventLabel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxYear.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MilesDriven)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Source)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientEvent.EventLabel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxYear.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MilesDriven)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Source)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MileageID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MileageID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MileageID })
        </td>
    </tr>
}

</table>
